import turtle

def square(x,y,a,color): 
  turtle.up()
  turtle.setposition(x, y)
  turtle.down()
  turtle.color(color)
  turtle.begin_fill()

  turtle.forward(a)
  turtle.right(90)
  turtle.forward(a)
  turtle.right(90)
  turtle.forward(a)
  turtle.right(90)
  turtle.forward(a)
  turtle.right(90)

  turtle.end_fill()


def right_triangle(x,y,a,color):
    turtle.up()
    turtle.setposition(x,y)
    turtle.down()
    turtle.color(color)
    turtle.begin_fill()

    turtle.forward(a)
    turtle.left(90)
    turtle.forward(a)
    turtle.left(135)
    turtle.forward(a * math.sqrt(2))

    turtle.end_fill()


def rtriangle(x, y, a, color):
    turtle.up()
    turtle.setposition(x, y)
    turtle.down()
    turtle.color(color)
    turtle.begin_fill()
    for i in range(3):
        turtle.forward(a)
        turtle.left(120)

    turtle.end_fill()
